<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F8E9"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="745dp" >

        <TextView
            android:id="@+id/kildarevillagelocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/kildarevillagedescription"
            android:layout_alignParentTop="true"
            android:text=""
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/imageLabel"
            android:layout_width="600dp"
            android:layout_height="370dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:src="@drawable/kildarevillage" />

        <TextView
            android:id="@+id/kildarevillagedescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageLabel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:text=""
            android:textSize="25sp" />

        <Button
            android:id="@+id/kildarevillagebutton"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/imageLabel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="350dp"
            android:background="@drawable/roundedbuttongreen"
            android:text="What&apos;s Coming Up?"
            android:textColor="#ffffff" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignBottom="@+id/kildarevillagebutton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="127dp"
            android:background="#CF0D17" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/kildarevillagedescription"
            android:layout_alignTop="@+id/view2"
            android:layout_marginTop="17dp"
            android:text="Opening Hours: 10am - 6pm"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/villagetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <WebView
            android:id="@+id/kildarevillageweb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/textView1"
            android:gravity="center" />

        <View
            android:id="@+id/View01"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/kildarevillagedescription"
            android:background="#CF0D17" />

    </RelativeLayout>

</ScrollView>